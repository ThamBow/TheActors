<h2 class="page-header"> Search Actors </h2>

<form action="/actors" method="GET">

   <label>Name</label>
   <input type="text" name="name" value="<%= searchOptions.name %>">
    

<button type="submit">Search</button>

</form>

<br>

<% actors.forEach(actor => { %>

<div><%= actor.name %></div>
<div class="btn-row">
<a class="btn btn-primary" href="/actors/<%= actor.id %>">View</a>
<a class="btn btn-primary" href="/actors/<%= actor.id %>/edit">Edit</a>

<%- include('../partials/deleteForm', {url: `/actors/${actor.id }` }) %>
</div>
<% }) %>